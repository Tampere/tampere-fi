{#
/**
 * Available variables:
 * - a11y_list__base_class - the base classname
 * - a11y_list__modifiers - array of modifiers to add to the base classname
 * - a11y_list__blockname - blockname prepended to the base classname
 * - a11y_list__items - array of items to display
 *
 * - a11y_list__list_item__modifiers - array of modifiers to add to the list items
 *
 * - a11y_list__link__modifiers - array of modifiers to add to the list item links
 */
#}
{% set a11y_list__base_class = "accessibility-list" %}

<ul {{ bem(a11y_list__base_class, (a11y_list__modifiers|default([])), a11y_list__blockname) }}>
  {% block list_content %}
    {% for a11y_list__item in a11y_list__items %}
      {% include "@molecules/accessibility-list/_accessibility-list-item.twig" with {
        "a11y_list_item__icon_name": a11y_list__item.icon_name,
        "a11y_list_item__content": a11y_list__item.content,
      } %}
    {% endfor %}
  {% endblock %}
</ul>
