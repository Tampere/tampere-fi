{#
 # Available variables:
 # - external_link_indicator__base_class - base classname of the wrapper.
 # - external_link_indicator__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - external_link_indicator__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 #
 # - external_link_indicator__icon__modifiers - array of modifiers to add to the base classname of the icon wrapper.
 #}

{% set external_link_indicator__base_class = "external-link-indicator" %}

{% set external_link_indicator__description = "Link to an external website"|t %}

<template id="external-link-indicator-template">
  <span {{ bem(external_link_indicator__base_class, external_link_indicator__modifiers|default([]), external_link_indicator__blockname) }}>
    {%- include "@atoms/04-images/icons/_icon.twig" with {
      "icon_base_class": "icon",
      "icon_modifiers": external_link_indicator__icon__modifiers,
      "icon_blockname": external_link_indicator__base_class,
      "icon_name": "external",
      "icon_decorative": true,
    } -%}
    <span class="visually-hidden">{{ external_link_indicator__description }}</span>
  </span>
</template>
