{% set radio__base_class = "radio" %}

{% set radio__input__class = radio__base_class ~ "__input" %}

{% if radio__input__attributes %}
  {% set radio__input__attributes = radio__input__attributes.addClass(radio__input__class) %}
{% endif %}

<li class="{{ radio__base_class ~ "__wrapper"}}">
  <label for="radio-{{ key }}" class="{{ radio__base_class }}">
    <input
      {% if radio__input__attributes %}
        {{ radio__input__attributes }}
      {% else %}
        class="{{ radio__input__class }}"
      {% endif %}
      id="radio-{{ key }}"
      name="radio"
      type="radio"
      {% if radio_item_checked %}
        checked="{{ radio_item_checked }}"
      {% endif %}
    >

    {% include "@atoms/04-images/icons/_icon.twig" with {
      "icon_base_class": "icon",
      "icon_blockname": radio__base_class,
      "icon_name": "circle",
      "icon_decorative": TRUE,
    } %}

    {% include "@atoms/04-images/icons/_icon.twig" with {
      "icon_base_class": "icon",
      "icon_blockname": radio__base_class,
      "icon_modifiers": [ "checked" ],
      "icon_name": "oval",
      "icon_decorative": TRUE,
    } %}

    <span class="{{ radio__base_class ~ "__content" }}">
      {{ radio_item }}
    </span>
  </label>
</li>
