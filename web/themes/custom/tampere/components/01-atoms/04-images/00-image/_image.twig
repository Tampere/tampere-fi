{% set image_base_class = image_base_class|default("img") %}
{% set image_link_blockname = image_link_blockname|default(image_blockname) %}
{% set image_link_modifiers = image_link_modifiers|default(image_modifiers) %}

{% if img_url %}
  <a {{ bem("link", image_link_modifiers, image_link_blockname) }} href="{{ img_url }}">
{% endif %}
  <img
    {{ bem(image_base_class, (image_modifiers), image_blockname, image_custom_classes) }}
    {% if img_srcset %}
      srcset="{{ img_srcset }}"
    {% endif %}
    {% if img_sizes %}
      sizes="{{ img_sizes }}"
    {% endif %}
    src="{{ img_src }}"
    {% if img_alt %}
      alt="{{ img_alt|replace({'""':''}) }}"
    {% else %}
      alt=""
    {% endif %}
    {% if img_title %}
      title="{{ img_title }}"
    {% endif %}
  />
{% if img_url %}
  </a>
{% endif %}
