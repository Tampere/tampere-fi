{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% set search_bar__base_class = "search-bar" %}
{% set search_panel_search_bar_input_placeholder = "Search by keyword"|t ({}, { "context" : "Embedded content and map tabs search placeholder" }) %}
{% set search_bar_input_attributes = {
    "placeholder": search_panel_search_bar_input_placeholder,
  }
%}

{% include "@atoms/05-forms/_input.twig" with {
  "custom_classes": search_bar__base_class ~ "__input",
  "input_attributes": search_bar_input_attributes,
} %}