{% if attributes.value == "1" %}
  {% set checkbox__wrapper__element = "div" %}
{% endif %}

{% include "@atoms/05-forms/checkbox/_checkbox-item.twig" with {
  "checkbox_item": element["#title"],
  "checkbox__wrapper__element": checkbox__wrapper__element,
  "key": attributes.id,
  "checkbox__input__attributes": attributes.removeAttribute("id"),
  "attributes": [],
} %}
